<div class="container">

<div class ="row">
<div class="col-md-4">
</div>
<div class="col-md-6">
<h1>Burgers</h1>
</div>
</div>

<div class="row">

<div class="col-md-4">
</div>
<div class="col-md-6">

<h2>Add a New Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">New Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>


  <button type="submit" value="1">Add Burger</button>
</form>
</div>
</div>

<div class="row">
<div class="col-md-6">
<h2>Burgers ready to be eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

</div>
</div>

</div>